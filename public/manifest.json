{
  "short_name": "Weather Extension",
  "name": "Weather Chrome Extension",
  "permissions": [
    "geolocation"
  ],
  "host_permissions": [
    "*://*/*"
  ],
  "manifest_version": 3,
  "action": {
    "default_popup": "index.html",
    "default_title": "Weather Extension"
  },
  "icons": {
    "16": "weather16.png",
    "48": "weather48.png",
    "128": "weather128.png"
  },
  "version": "1.0",
  "content_security_policy": {
    "script-src": "self",
    "object-src": "self"
  }
}
